<Window x:Class="GML2PNG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GML2PNG"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" AllowDrop="True" DragEnter="Window_DragEnter" Drop="Window_Drop">
    <Grid AllowDrop="False">
        <Button x:Name="exportButton" Content="Export" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="exportButton_Click"/>
        <Button x:Name="clearButton" Content="Clear" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Click="clearButton_Click"/>
    </Grid>
</Window>
